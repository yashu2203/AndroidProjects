<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#F2F2F2"
    android:gravity="center"
    android:orientation="vertical"
    >
   <TextView
        android:id="@+id/sem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select College"
        android:paddingLeft="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold|italic"
        android:paddingBottom="5dp"
        />
    
    <View    android:id="@+id/line"
             android:layout_below="@id/sem"
             android:layout_width="match_parent"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_height="2dp"
             android:background="#c0c0c0"/>
    
    <RelativeLayout 
        android:id="@+id/rel1"
        android:layout_below="@id/line"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        >
        
        <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/moreorig"
        android:text="Rajalakshmi Engineering College"
        android:textColor="#252525" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button1"
        android:background="@drawable/moreorig"
        android:text="Rajalakshmi Institute of Technology"
        android:textColor="#252525" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button2"
        android:background="@drawable/moreorig"
        android:text="Maamallan Institute of Technology"
        android:textColor="#252525" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button3"
        android:background="@drawable/moreorig"
        android:text="Sree Sastha Institute of Technology"
        android:textColor="#252525" />
    
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content"
             android:layout_height="wrap_content" 
             android:layout_marginTop="20dp">
    
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#c0c0c0" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line2"
        android:layout_margin="5dp"
        android:background="@drawable/nextbtn"
        android:text="Continue >>"
        android:textColor="@color/white"
        android:textSize="20dp" />
        
    </RelativeLayout>
    
    
</LinearLayout>
