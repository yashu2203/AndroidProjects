<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="858dp" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="         Manual Book Request"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="15dp"
         android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittextbg"
        android:ems="10" />

    <EditText
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittextbg"
        android:layout_below="@+id/textView2"
        android:ems="10" 
           android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/author"
        android:layout_marginTop="18dp"
        android:text="Quantity" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_below="@+id/sub"
        android:layout_marginTop="38dp"
        android:text="Author" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="37dp"
        android:text="Subject" />

    <Button
        android:id="@+id/mproceed"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/custp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
           android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
        android:background="@drawable/next" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="50dp"
        android:text="      Name:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/Qedit"
        android:layout_marginTop="136dp"
        android:text="             Customer Details"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/custp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="number" 
            android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/edittextbg"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/custn"
        android:layout_marginTop="28dp"
        android:text="Phone" />

    <EditText
        android:id="@+id/custn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/custp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittextbg"
        android:ems="10" />

    <EditText
        android:id="@+id/Qedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignRight="@+id/author"
        android:layout_below="@+id/textView8"
        android:background="@drawable/edittextbg"
        android:ems="10"
           android:layout_marginTop="5dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/author"
        android:layout_below="@+id/Qedit"
        android:layout_marginTop="19dp"
        android:text="Select a book condition" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/custp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:text="Note: For the manual enquiry the &apos;price&apos; details and delivery details will be informed over the phone within 24 hours"
        android:textAppearance="?android:attr/textAppearanceLarge" />

<RadioGroup
    android:id="@+id/radiogrup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
android:layout_below="@id/textView9">

<RadioButton
    android:id="@+id/radioButton1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/radioButton2"
    android:layout_alignRight="@+id/textView5"
    android:layout_marginRight="46dp"
    android:text="New" />

<RadioButton
    android:id="@+id/radioButton2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/textView5"
    android:layout_alignLeft="@+id/textView7"
    android:layout_marginBottom="46dp"
    android:text="Old" />

</RadioGroup>

</RelativeLayout>
    
    
</ScrollView>
